<div class="nested-fields">
  <div class="row g-3 align-items-center">
    <div class="col-md-5">
      <div class="form-floating">
        <%= f.select :contact_type, options_for_select(EmployeeContact.contact_types.keys, f.object.contact_type), { include_blank: false }, { class: "form-select" } %>
        <%= f.label :contact_type, "Tipo de contato" %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="form-floating">
        <%= f.text_field :value, label: false, placeholder: "Enter contact value", class: "form-control" %>
        <%= f.label :value, "Valor" %>
      </div>
    </div>
    <div class="col-md-2">
      <%= link_to_remove_association "remove", f, class: "btn btn-sm btn-light rounded-pill" %>
    </div>
  </div>
</div>
